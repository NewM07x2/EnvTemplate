# PostgreSQL設定
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nest_next_db
POSTGRES_PORT=5432

# バックエンド設定
BACKEND_PORT=4000

# フロントエンド設定
FRONTEND_PORT=3000

# データベース接続URL
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/nest_next_db?schema=public

# API URL (フロントエンドから)
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:4000/graphql

# JWT設定
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
